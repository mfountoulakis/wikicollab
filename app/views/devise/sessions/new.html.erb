<div class="container">





<div class="absoluteCenter">
<%= form_for(resource, :as => resource_name, :html => { :class => "login-form sign_in" } , :url => session_path(resource_name)) do |f| %>




  <fieldset>

<img class="clipboard" src="http://designmodo.github.io/Flat-UI/images/icons/svg/clipboard.svg" alt="Clipboard">

<h1>Sign in</h1>



  <div><%= f.label :email %><br />


  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :class => 'first-icon fui-checkbox-unchecked'%> 
      <%= f.label :remember_me %></div>
  <% end %>

  <div><%= f.submit "Sign in", :class => "btn btn-block btn-lg btn-primary bttn_width"%></div>
<% end %>

<%= render "devise/shared/links" %>

</fieldset>
</div>
</div>
</div>

<!-- end form wrapper -->
